<html>

<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link href="./styles.css" rel="stylesheet" type="text/css"/>
  <script src="./menu.js" type="text/javascript"> </script>
</head>

<body>
  <h1>H Bros</h1>
<div class="flex-container">
  <main>
    <table>
      <tbody>
        <tr>
          <td id="side1">
            text
          </td>
          <td id="side2">
            text
          </td>
        </tr>
        <tr>
          <td id="bed">
            text
          </td>
          <td id="entree">
            text
          </td>
        </tr>
      </tbody>
    </table>
  </main>

  <sidebar>
    <div class="tab">
      <span class="tab-head"><h2>Entree</h2></span>
      <div class="tab-content">
        <form>
          <input type="radio" name="entree" value="1" checked>
            Huli Huli chicken
          </input>
          <input type="radio" name="entree" value="2">
            Molokai Chicken
          </input>
          <input type="radio" name="entree" value="3">
            Honolulu Chicken
          </input>
          <input type="radio" name="entree" value="4">
            Grilled Vegetables
          </input>
          <input type="radio" name="entree" value="5">
            Luau Pig
          </input>
        </form>
      </div>
    </div>

    <div class="tab">
      <span class="tab-head"><h2>Bed</h2></span>
      <div class="tab-content">
        <form>
          <input type="radio" name="bed" value="rice" checked>
            Rice
          </input>
          <input type="radio" name="bed" value="vegetables">
            Grilled Vegetables
          </input>
        </form>
      </div>
    </div>

    <div class="tab">
      <span class="tab-head"><h2>Side 1</h2></span>
      <div class="tab-content">
        <form>
          <input type="radio" name="side1" value="rice" checked>
            Rice
          </input>
          <input type="radio" name="side1" value="mac">
            Macaroni Salad
          </input>
          <input type="radio" name="side1" value="vegetables">
            Grilled Vegetables
          </input>
          <input type="radio" name="side1" value="pineapple">
            Pineapple
          </input>
        </form>
      </div>
    </div>

    <div class="tab">
      <span class="tab-head"><h2>Side 2</h2></span>
      <div class="tab-content">
        <form>
          <input type="radio" name="side2" value="rice" checked>
            Rice
          </input>
          <input type="radio" name="side2" value="mac">
            Macaroni Salad
          </input>
          <input type="radio" name="side2" value="vegetables">
            Grilled Vegetables
          </input>
          <input type="radio" name="side2" value="pineapple">
            Pineapple
          </input>
        </form>
      </div>
    </div>

  </sidebar>
</div>
</body>

</html>
